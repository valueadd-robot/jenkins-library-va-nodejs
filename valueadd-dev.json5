{
  branch: {
    types: ['feature', 'bugfix', 'hotfix', 'release', 'refactor']
    // types of branches
  },
  commitlint: {
    'body-leading-blank': [2, 'always'],
    'footer-leading-blank': [2, 'always'],
    'header-max-length': [2, 'always', 72],
    'body-max-line-length': [2, 'always', 72],
    'footer-max-line-length': [2, 'always', 72],
    'scope-case': [2, 'always', 'lower-case'],
    'subject-case': [2, 'never', ['sentence-case', 'start-case', 'pascal-case', 'upper-case']],
    'subject-empty': [2, 'never'],
    'subject-full-stop': [2, 'never', '.'],
    'type-case': [2, 'always', 'lower-case'],
    'type-empty': [2, 'never'],
    'type-enum': [
      2,
      'always',
      ['build', 'chore', 'ci', 'docs', 'feat', 'fix', 'perf', 'refactor', 'style', 'test', 'deps']
    ],
    'scope-enum': [2, 'always', ['deps','release']]
  },
  prettier: {
    extensionsToCheck: ['.json', '.ts', '.js', '.html', '.css', '.scss']
    // extensions to check with prettier
  },
  nxTagsValidator: {
    // ignore default tags
    ignore: [
      'type:e2e',
      'type:application',
      'type:util',
      'type:ui',
      'type:data-access',
      'type:domain',
      'type:feature',
      'scope:shared',
      '*'
    ]
  }
}
